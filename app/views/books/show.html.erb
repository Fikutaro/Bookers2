<main>
        <p id="notice"></p>
        <div class="container px-5 px-sm-0">
  
  <div class="row">
    <%= render 'books/list', book: @book_new, user: @book.user %>
  
   
   
   
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
  <thead>
    
  </thead>
  <tbody>
  <tr>
    <td>
      <%= link_to user_path(@book.user.id) do %>
       <%= attachment_image_tag @book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%> </br>
       <%= @book.user.name %>
       <% end %>
    </td>



   <td><%= link_to @book.title, book_path(@book.id) %></td>
   
  <td><%= @book.body %></td>
  
  <% if @book.user.id == current_user.id %>
  
  <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
  <td><%= link_to "Destroy", book_path(@book), "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger", method: :delete %></td>
 
  <% end %>
  
  
  
  </tr>
    </tbody>
</table>
    </div>
  </div>
</div>
      </main>
